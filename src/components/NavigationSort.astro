<header class="header">
  <nav class="nav">
    <div class="logo">
      <a href="/"> Byhaven </a>
    </div>

    <button class="burger" onclick="openNav()" aria-label="Menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
  </nav>
</header>

<div id="myNav" class="overlay">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <div class="overlay-content">
    <a href="/musik">Program</a>
    <a href="/mad">Mad</a>
    <a href="/bar">Bar</a>
    <a href="/omos">Om os</a>
  </div>
</div>

<script is:inline>
  function openNav() {
    document.getElementById("myNav").style.width = "100%";
  }

  function closeNav() {
    document.getElementById("myNav").style.width = "0%";
  }
</script>

<style>
  /* Burger-knap styling (kun synlig på mobil) */
  .burger {
    display: flex;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 11;
    position: fixed;
    top: 20px;
    right: 20px;
  }

  .burger .bar {
    width: 25px;
    height: 3px;
    background-color: rgb(0, 0, 0);
    transition: 0.3s;
  }

  /* Overlay container (skjult som standard) */
  .overlay {
    height: 100%;
    width: 0;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.95);
    overflow-x: hidden;
    transition: width 0.5s ease;
    z-index: 10;
  }

  /* Luk-knap i hjørnet */
  .closebtn {
    position: absolute;
    top: 20px;
    left: 35px;
    font-size: 60px;
    text-decoration: none;
    color: #fff;
    cursor: pointer;
  }

  /* Link-indhold i overlay */
  .overlay-content {
    position: relative;
    top: 30%;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .overlay-content a {
    font-size: 2rem;
    color: #f1f1f1;
    text-decoration: none;
    font-weight: 400;
    text-transform: uppercase;
    transition: 0.3s;
  }

  .overlay-content a:hover {
    color: var(--accent-color, #ff4081); /* eller en fast farve */
  }

  /* Skjul overlay og burger på større skærme */
  @media screen and (min-width: 768px) {
    .overlay {
      display: none;
    }

    .burger {
      display: none;
    }
  }
</style>
