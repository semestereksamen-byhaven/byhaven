---
const { data } = Astro.props;
console.log("MusikCard data:", data);

let month = data.Month;
let date = parseInt(data.Dato.slice(8));
let formattedDate = `${date}. ${month} 2025`;
---

<div class="event-card">
  <img src={data.Billede} alt={`Billede af ${data.Navn}`} class="event-image" />
  <div class="event-content">
    <h2 class="event-title">{data.Navn}</h2>
    <div class="event-genre">{data.Genre}</div>
    <div class="event-info">
      <span>{formattedDate}</span>
      <span>Kl. {data.Tid}:00</span>
    </div>
    <div class="infoboks">
      <span>Fri entre</span>
      <a class="event-button" href={`/kunstner/${data.Slug}`}>Se mere</a>
    </div>
  </div>
</div>

<style>
  span {
    font-family: "Raleway", sans-serif;
    color: var(--overskrift);
    font-size: 1rem;
    font-weight: 300;
    text-align: center;
  }
  h2 {
    font-family: "Raleway", sans-serif;
    color: var(--black);
    font-size: 2rem;
    font-weight: 700;
  }
  .event-card {
    background-color: white;
    width: fit-content;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    margin-bottom: 1rem;
  }

  .event-image {
    display: block;
    width: 50%;
    box-sizing: border-box;
  }

  .event-title {
    margin: 8px 0;
    font-size: 1.4em;
    font-weight: bold;
  }

  .event-genre {
    display: inline-block;
    background-color: #e0e0e0;
    color: black;
    padding: 5px 15px;
    margin-bottom: 12px;
    width: fit-content;
    font-family: "Raleway", sans-serif;
    font-size: 0.8rem;
    font-weight: 700;
  }

  .event-info {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 8px;
    font-size: 0.9rem;
    gap: 34px;
  }

  .event-button {
    padding: 1px 10px;
    border: 1px solid black;
    background: none;
    cursor: pointer;
    width: fit-content;
    align-self: flex-end;
    text-decoration: none;
  }
  .event-content {
    display: flex;
    flex-direction: column;
    padding-left: 10px;
  }
  .infoboks {
    display: flex;
    justify-content: space-between;
  }

  @media (min-width: 600px) {
    span {
      font-family: "Raleway", sans-serif;
      color: var(--overskrift);
      font-size: 1.3rem;
      font-weight: 300;
      text-align: center;
    }
    .event-card {
      background-color: white;
      /* width: 320px; */
      overflow: hidden;
      display: flex;
      flex-direction: column;
    }

    .event-image {
      display: block;
      width: 100%;
      padding: 8px;
      box-sizing: border-box;
    }

    .event-title {
      margin: 8px 0;
      font-size: 1.4em;
      font-weight: bold;
    }

    .event-genre {
      display: inline-block;
      background-color: #e0e0e0;
      color: black;
      font-size: 0.9em;
      padding: 5px 15px;
      margin-bottom: 12px;
      width: fit-content;
    }

    .event-info {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
      font-size: 1em;
    }

    .event-button {
      border: 1px solid black;
      background: none;
      cursor: pointer;
      width: fit-content;

      text-decoration: none;
    }
    .infoboks {
      display: flex;
      justify-content: space-between;
    }
    .event-content {
      display: flex;
      flex-direction: column;
      padding: 1rem;
    }
  }
</style>
