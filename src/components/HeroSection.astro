<section class="hero-wrapper">
  <video class="hero-video" src="herovideo_byhaven.mp4" autoplay muted loop playsinline></video>

  <div class="hero-text">
    <h1>Byhaven</h1>
    <p class="hero-subtitle">Live musik i hjertet af københavn</p>
  </div>
  <p class="hero-address">Studiestræde 52 · 1554 København V</p>
</section>

<style>
  .hero-wrapper {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    margin-bottom: 3rem;
  }

  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .hero-text {
    position: absolute;
    z-index: 10;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: var(--white);
    padding: 0 1rem;
  }

  .hero-text h1 {
    color: var(--kunstner);
    font-size: clamp(2rem, 15vw, 10rem);
    font-weight: 700;
    margin: 0;
  }

  .hero-subtitle {
    font-family: "Reenie Beanie", cursive;
    font-weight: 400;
    font-size: clamp(1.2rem, 8vw, 3rem);
    margin-top: 0.5rem;
    color: var(--white);
    line-height: 2.5rem;
  }

  .hero-address {
    text-align: center;
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    color: var(--white);
    font-size: 1.4rem;
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.6); /* Så teksten står tydeligt på lys video */
  }
</style>
